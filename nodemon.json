{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**",
    "cache/**", 
    "ignore/**",
    "*.db"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "debug:*",
    "PORT": 3001
  },
  "ext": "js json"
}
